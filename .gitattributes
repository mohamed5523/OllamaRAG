# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Docker
Dockerfile text eol=lf
docker-compose.yml text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
.env* text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.xml text eol=lf
*.ini text eol=lf
*.toml text eol=lf

# Markdown
*.md text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.db binary
*.sqlite binary
